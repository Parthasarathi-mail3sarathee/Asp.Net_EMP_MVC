@using WebApplication_Shared_Services.Model;
@{
    ViewData["Title"] = "Home Page";
}

@Html.Hidden("SessionSet", (string)ViewBag.NotValidUser)
<a asp-area="" asp-controller="Home" asp-action="Logout" class="lgout">Logout</a>
<div class="EmpContainer">

    <div id="div">

        <input type="submit" value="Add Employee" class="buttontblAdd" onclick="location.href='@Url.Action("AddEmployee", "Employee")'" />

        <span class="msgInner">@ViewBag.msg</span><br />
        <table id="table" cellspacing="0" cellpadding="0" border="0" width="820" class="myFont filldata">
            <tr>
                <td>
                    <table id="tableHeader" cellspacing="0" cellpadding="1" border="1" width="800">
                        <tr style="color:white;background-color:#4CAF50">
                            <th width="100">ID</th>
                            <th width="100">Name</th>
                            <th width="100">Address</th>
                            <th width="100">Role</th>
                            <th width="100">Department</th>
                            <th width="100">Email</th>
                            <th width="100">DOB</th>
                            <th width="100">DOJ</th>
                            <th width="100">SkillSet</th>
                            <th width="100">Edit</th>
                            <th width="80">Delete</th>
                            <th width="20"></th>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <div style="width:100%; height:380px; overflow-y: auto;">
                        <table id="tableData" cellspacing="0" cellpadding="1" border="1" width="800">
                            @foreach (Student std in (List<Student>)ViewBag.studentList)
                            {
                                <tr>
                                    <td width="100">@std.ID</td>
                                    <td width="100">@std.Name</td>
                                    <td width="100">@std.Address</td>
                                    <td width="100">@std.Role</td>
                                    <td width="100">@std.Department</td>
                                    <td width="100">@std.Email</td>
                                    <td width="100">@std.DOB</td>
                                    <td width="100">@std.DOJ</td>
                                    <td width="100">
                                        @if (std.SkillSets != null)
                                        {
                                            @string.Join(", ", std.SkillSets)
                                            ;
                                        }
                                    </td>
                                    <td width="100">  <input type="submit" id="Edit_@std.ID" value="Edit" class="buttontbl" onclick="location.href='@Url.Action("EditEmployee/"+@std.ID, "Employee")'" /></td>
                                    <td width="80">  <input type="submit" id="Delete_@std.ID" value="Delete" class="buttontbl" onclick="location.href='@Url.Action("DelEmployee/"+@std.ID, "Employee")'" /></td>
                                    <td width="20"></td>
                                </tr>
                            }

                        </table>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style="width:100%; height:380px; overflow-y: auto;">
                        <table id="tableData" cellspacing="0" cellpadding="1" border="1" width="800">
                            @foreach (Student std in (List<Student>)ViewBag.studentList)
                            {
                                <tr>
                                    <td width="100">@std.ID</td>
                                    <td width="100">@std.Name</td>
                                    <td width="100">@std.Address</td>
                                    <td width="100">@std.Role</td>
                                    <td width="100">@std.Department</td>
                                    <td width="100">@std.Email</td>
                                    <td width="100">@std.DOB</td>
                                    <td width="100">@std.DOJ</td>
                                    <td width="100">
                                        @if (std.SkillSets != null)
                                        {
                                            @string.Join(", ", std.SkillSets)
                                            ;
                                        }
                                    </td>
                                    <td width="100">  <input type="submit" id="Edit_@std.ID" value="Edit" class="buttontbl" onclick="location.href='@Url.Action("EditEmployee/"+@std.ID, "Employee")'" /></td>
                                    <td width="80">  <input type="submit" id="Delete_@std.ID" value="Delete" class="buttontbl" onclick="location.href='@Url.Action("DelEmployee/"+@std.ID, "Employee")'" /></td>
                                    <td width="20"></td>
                                </tr>
                            }

                        </table>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div id="PaginationContainer">
                        @Html.Partial("_Pager",(Pager)ViewBag.pager);
                    </div>
                </td>
            </tr>
        </table>

    </div>
</div>
